@model IEnumerable<app.Models.Report>

@{
    ViewData["Title"] = "Rapporter";
    ViewData.AddActivePage(ManageNavPages.Reports);
}

<table class="table">
    <thead>
        <tr>
            <th>
                Rapport-melding
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Error)
            </td>
            <td class="fit">
                <div class="dropdown">
                    <button id="more-btn" class="btn btn-default dropdown-toggle btn-sm" type="button" data-toggle="dropdown">
                        <span class="more-dot"></span>
                        <span class="more-dot"></span>
                        <span class="more-dot"></span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a asp-controller="Reports" asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                        <li><a asp-controller="Reports" asp-action="Details" asp-route-id="@item.Id">Details</a></li>
                        <li><a asp-controller="Reports" asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
                    </ul>
                </div>
            </td>
        </tr>
    }
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="2">Ingen rapporter Ã¥ vise...</td>
        </tr>
    }
    </tbody>
</table>
