@model app.Models.AlarmViewModels.CreateViewModel

@{
    ViewData["Title"] = Localizer["Create"];
}

<h2>@Localizer["Create"]</h2>

<h4>@Localizer["Alarm"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-returnurl="@ViewData["ReturnUrl"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Alarm.Name" class="control-label">Navn på alarm</label>
                <input asp-for="Alarm.Name" class="form-control" />
                <span asp-validation-for="Alarm.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alarm.Date" class="control-label"></label>
                <input asp-for="Alarm.Date" class="form-control" />
                <span asp-validation-for="Alarm.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Status etter utløpsdato</label>
                <select name="Alarm.StatusId" class="form-control">
                    <option value="">Ikke endre</option>
                    @foreach(Status status in Model.Statuses){
                        <option value="@status.Id">@status.StatusName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Create"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@ViewData["ReturnUrl"]">Tilbake</a>
</div>