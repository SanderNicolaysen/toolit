@model app.Models.AlarmViewModels.EditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Alarm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Alarm.Id" />
            <div class="form-group">
                <label asp-for="Alarm.Name" class="control-label"></label>
                <input asp-for="Alarm.Name" class="form-control" />
                <span asp-validation-for="Alarm.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alarm.Date" class="control-label"></label>
                <input asp-for="Alarm.Date" class="form-control" />
                <span asp-validation-for="Alarm.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Status after expiry</label>
                <select name="Tool.StatusId" class="form-control">
                    <option value="">Do not change</option>
                    @foreach(Status status in Model.Statuses){
                        <option value="@status.Id">@status.StatusName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Tool" asp-action="Index">Back to List</a>
</div>

