@model IEnumerable<app.Models.Alarm>

@{
    ViewData["Title"] = "Index";
}

<h2>Alarm-List</h2>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" data-toggle="dropdown">options
                    <span class="caret"></span></button>
                    <ul class="dropdown-menu">
                        <li><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                        <li><a asp-action="Details" asp-route-id="@item.Id">Details</a></li>
                        <li><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
                    </ul>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
