@model app.Models.Report

@{
    ViewData["Title"] = Localizer["Delete"];
}

<h2>@Localizer["Delete"]</h2>

<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@Localizer["Report"]</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Error)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Error)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-default" /> |
        <a asp-controller="Admin" asp-action="Reports">@Localizer["Back to list"]</a>
    </form>
</div>
