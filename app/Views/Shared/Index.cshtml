@model IEnumerable<app.Models.ApplicationUser>

@{
    ViewData["Title"] = "Users";
}

<h2>Users</h2>

<p>
    <a asp-controller="Account" asp-action="Register">Register new user</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-controller="Users" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Users" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
