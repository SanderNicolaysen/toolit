@model app.Models.ToolViewModels.CreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Tool</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tool.Name" class="control-label"></label>
                <input asp-for="Tool.Name" class="form-control" />
                <span asp-validation-for="Tool.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select name="Tool.StatusId" class="form-control">
                    @foreach(Status status in Model.Statuses){
                        <option value="@status.Id">@status.StatusName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Bilde</label>
                <input type="file" name="Image" accept="image/*">
            </div>
            <div class="form-group">
                <label asp-for="Tool.Alias" class="control-label"></label>
                <input asp-for="Tool.Alias" class="form-control" />
                <span asp-validation-for="Tool.Alias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tool.ToolIdentifierCode" class="control-label"></label>
                <input asp-for="Tool.ToolIdentifierCode" class="form-control" />
                <span asp-validation-for="Tool.ToolIdentifierCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tool.Shelf" class="control-label"></label>
                <input asp-for="Tool.Shelf" class="form-control" />
                <span asp-validation-for="Tool.Shelf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

