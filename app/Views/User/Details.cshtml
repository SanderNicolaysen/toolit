@model app.Models.ApplicationUser

@{
    ViewData["Title"] = "Details";
}

<h2>Detaljer</h2>

<div>
    <h4>Bruker</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Brukernavn
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt>
            E-post
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Telefonnummer
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt>Super-Administrator</dt>
        <dd>
            @if (Model.isSuperAdmin)
            {
                @Html.Raw("Ja")
            }
            else
            {
                @Html.Raw("Nei")
            }
        </dd>
        <dt>Administrator</dt>
        <dd>
            @if (Model.isAdmin)
            {
                @Html.Raw("Ja")
            }
            else
            {
                @Html.Raw("Nei")
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Endre</a> |
    <a asp-controller="Admin" asp-action="Users">Tilbake til Liste</a>
</div>
